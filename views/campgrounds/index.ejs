<% include ../partials/header.ejs %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary" href="/campgrounds/new">Add New Campground</a>
        </p>
    </header>

    <div class="row text-center">
        <% campgrounds.forEach(function (campground) { %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img class="img-fluid img-rounded" style="width: 500px" src="<%= campground.image %>" alt="">
                    <div class="caption">
                        <%= campground.name %>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a><!--Questo ID viene generato da mongo-->
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>


<div>
    <a href="/">Back to Landing page</a>
</div>
</div>
<% include ../partials/footer.ejs %>